<!DOCTYPE html>
<html>
  <head>
    <title>Martket Record</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <div class="main">
      <header class="clearfix">
        <ul>
          <li class="left1">
          <% if user_signed_in? %>
            <%= link_to 'Market Record', articles_path, class: "link"%>
          <% else %>  
            <%= link_to 'Market Record', root_path, class: "link"%>
            <% end %>
          </li>
          <li class="left2">
          <% if controller.controller_name == "articles" %>
            <% if user_signed_in? %>
              <%= form_with(model: @article, method: :get, local: true, ) do |form| %>
                <%= form.text_field :search_title, placeholder:"記事タイトル検索" %>
                <%= form.submit '検索' , name: 'search', class:"btn btn-warning" %>
              <% end %>
            <% end %>
          <% end %>
          </li>
          
          <div class="float_right">
            <li class="right_article_post"><%= link_to '記事を投稿する', new_article_path, class:"btn btn-warning btn-lg" if user_signed_in? %></li>
            <% if user_signed_in? %>
            <li class="right_icon">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-address-card size_top_icon"></i>
              </a>
              
              <ul class="dropdown-menu">
                  <li><%= link_to "Market Recordの使い方", guide_articles_path %></li>
                  <li><%= link_to "アカウント編集", edit_user_registration_path %></li>
                  <%# <li> %>
                    <%#= link_to "お気に入りユーザー一覧", stocks_path, class: "glyphicon glyphicon-thumbs-up" %>
                  <%# </li> %>
                  <li><%= link_to "ストック記事一覧", stocks_path, class: "glyphicon glyphicon-paperclip" %></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-ok" %></li>
                  <%# <li> %>
                    <%#= link_to "退会処理", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-pencil" %>
                  <%# </li> %>
                <% if user_signed_in? %>
                  <% if current_user.admin? %>
                  <li role="separator" class="divider"></li>
                  <li><a><%= link_to "管理画面", rails_admin_path %></a></li>
                  <% end %>
                <% end %>
              </ul>
              
            </li>
            <% end %>  
          </div>  
        </ul>
      </header>
      
      
      <br>
      <br>
      <%= yield %>
      <br>
      <br>
      <footer>
        <p class="footer-text">Copyright 2021 Market Record All Rights Reserved.</p>
      </footer>
    </div>  
  </body>
</html>
