<% if current_user.try(:admin?) %>
  <h1>Articles_admin</h1>
<% else %>
  <h1>Articles</h1>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>impressions_count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr id="article_<%= article.id %>">
        <%= render 'article', article: article %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Article', new_article_path %>

<h3> PV数ランキング </h3>
<% @rank_articles.each do |t| %>
  PV数
  <%= t.impressions_count %>
<% end %>